<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.zebra.jamesswinton.anchorbarcodesample">
  <!-- DW Content Provider Permission -->
  <uses-permission android:name="com.symbol.datawedge.permission.contentprovider" />

  <!-- EMDK Permission -->
  <uses-permission android:name="com.symbol.emdk.permission.EMDK" />

  <!-- Permissions -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:requestLegacyExternalStorage="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.AnchorBarcodeSample">
    <!-- EMDK Lib -->
    <uses-library
      android:name="com.symbol.emdk"
      android:required="true" />

    <!-- Activities -->
    <activity android:name=".SplashScreenActivity"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".MainActivity"
      android:screenOrientation="portrait">
    </activity>

  </application>

</manifest>